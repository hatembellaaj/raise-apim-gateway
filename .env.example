# Host ports
FRONTEND_PORT=8095
BACKEND_PORT=8096

# Backend internal port (inside container)
BACKEND_INTERNAL_PORT=8000

# Azure API Management
APIM_ENDPOINT=https://<your-apim-name>.azure-api.net/ai-chat
APIM_SUBSCRIPTION_KEY=<your-apim-subscription-key>

# Azure AI Foundry (proxied via APIM)
AZURE_DEPLOYMENT_ID=<your-azure-openai-deployment-name>
AZURE_API_VERSION=2024-02-15-preview

# Backend URL as seen from the frontend (inside docker network)
BACKEND_URL=http://backend:${BACKEND_INTERNAL_PORT}
